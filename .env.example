# Database Configuration
DATABASE_URL="your_postgresql_connection_string_here"

# Server Configuration
PORT=3000

# Redis Configuration
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=your_redis_host_here
REDIS_PORT=6379

# CORS Origins (comma-separated)
CORS_ORIGINS=https://wareongo.com,http://localhost:8080,http://localhost:3000,http://localhost:5173,http://localhost:4173

# Cache Settings
CACHE_TTL=900

# EmailJS Configuration for Email Notifications (No template needed - sends raw text emails)
EMAILJS_SERVICE_ID=your_emailjs_service_id_here
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_PRIVATE_KEY=your_emailjs_private_key_here
